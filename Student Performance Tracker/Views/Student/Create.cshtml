@model StudentPerformanceWeb.Models.Student
@{
    ViewData["Title"] = "Add Student";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <h2 class="mb-4 text-success text-center">🧑‍🎓 Add New Student</h2>

    <form asp-action="Create" method="post" class="row g-3 needs-validation" novalidate>
        <div class="col-md-6">
            <label asp-for="ID" class="form-label">Student ID</label>
            <input asp-for="ID" class="form-control" />
            <span asp-validation-for="ID" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Name" class="form-label">Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="MathMarks" class="form-label">Math Marks</label>
            <input asp-for="MathMarks" class="form-control" />
            <span asp-validation-for="MathMarks" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="ScienceMarks" class="form-label">Science Marks</label>
            <input asp-for="ScienceMarks" class="form-control" />
            <span asp-validation-for="ScienceMarks" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="EnglishMarks" class="form-label">English Marks</label>
            <input asp-for="EnglishMarks" class="form-control" />
            <span asp-validation-for="EnglishMarks" class="text-danger"></span>
        </div>

        <div class="col-12">
            <button type="submit" class="btn btn-primary">✅ Submit</button>
            <a asp-action="Index" class="btn btn-secondary">🔙 Back to List</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
